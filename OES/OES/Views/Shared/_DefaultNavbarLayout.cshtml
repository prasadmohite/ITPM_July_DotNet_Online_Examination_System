@{
    Layout = null; // Set your layout file if needed, otherwise it will inherit default layout
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        <style >
        .navbar {
            background-color: #343a40;
        }

        .navbar .nav-link {
            color: #fff;
            margin: 0 15px;
        }

            .navbar .nav-link:hover {
                color: #00d1b2;
            }

        .navbar .nav-item {
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            min-width: 200px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 10;
        }

            .dropdown-content ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }

                .dropdown-content ul li {
                    padding: 8px 10px;
                    font-size: 14px;
                }

                    .dropdown-content ul li a {
                        text-decoration: none;
                        color: #333;
                        display: block;
                    }

                        .dropdown-content ul li a:hover {
                            color: #fff;
                            background-color: #00d1b2;
                            border-radius: 4px;
                        }

        .nav-item:hover .dropdown-content {
            display: block;
        }

        .navbar-content {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }

        .navbar-logo {
            position: absolute;
            left: 20px;
            font-size: 20px;
            font-weight: bold;
            color: #00d1b2;
        }

            .navbar-logo img {
                max-height: 100%;
                width: auto;
            }

        .navbar {
            border: none;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            background: linear-gradient(135deg, #000000, #1f1f1f, #49676b, #6f4141);
            background-size: 200% 200%;
            animation: gradient 6s ease infinite;
            color: white;
        }



        @@keyframes gradient {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }
        /* Modal background gradient animation */
@@keyframes gradientBackground {
    0% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
    100% {
        background-position: 0% 50%;
    }
}

.modal-content {
    background: linear-gradient(135deg, #000000, #1f1f1f, #49676b, #6f4141);
    background-size: 200% 200%;
    animation: gradientBackground 6s ease infinite;
    color: white;
    border-radius: 8px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

/* Optional: You can add some additional transition for smoothness */
.modal-dialog {
    transition: transform 0.3s ease;
}

.modal-header,
.modal-footer {
    background: rgba(0, 0, 0, 0.6);
    color: white;
}

        .footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 20px 0;
            border: none;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            background: linear-gradient(135deg, #000000, #1f1f1f, #49676b, #6f4141);
            background-size: 200% 200%;
            animation: gradient 6s ease infinite;
            color: white;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        .navbar-logo {
            display: flex;
            align-items: center;
            justify-content: center; /* Adjust as needed */
            height: 100%; /* Ensures it matches the height of the navbar */
        }

        .navbar-logo-img {
            max-height: 100%; /* Ensures the image does not exceed the navbar height */
            max-width: 100%; /* Ensures the image scales proportionally */
            object-fit: contain; /* Ensures the image looks good within its container */
        }
    </style>
</head>
<body>
    <div class="navbar">
        <div class="navbar-logo">
            <img src="@Url.Content("~/Images/Screenshot__278_-removebg-preview.png")" alt="Logo">
        </div>
        <div class="navbar-content">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <script>
                        function navigateToTeacherDashboard() {
                            // Redirect to the desired URL
                            window.location.href = '@Url.Action("TeacherDashboard", "Teacher")'; // Replace "/Classroom" with the actual URL
                        }

                    </script>
                    <button class="nav-link active" id="home-tab" type="button" onclick="navigateToTeacherDashboard()">Home</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="examination-tab" type="button">Practice Exams</button>

                </li>
                <li class="nav-item">
                    <button class="nav-link" id="recruitment-tab" type="button">Recruitment</button>
                    <div class="dropdown-content">
                        <ul>
                            <li><a href="@Url.Action("CurrentJobs", "Recruitment")">&nbsp;&nbsp;Job Opportunities</a></li>
                            <li><a href="@Url.Action("InternshipProgram", "Recruitment")">&nbsp;&nbsp;Internship Program</a></li>
                            <li><a href="@Url.Action("CareerGuidance", "Recruitment")">&nbsp;&nbsp;Career Guidance</a></li>
                        </ul>
                    </div>
                </li>

                <li class="nav-item">
                    <script>
                            function navigateToClassroom() {
                                // Redirect to the desired URL
                                window.location.href = '@Url.Action("TeacherDashboard", "Teacher")'; // Replace "/Classroom" with the actual URL
                            }
                    </script>

                    <button class="nav-link" id="classroom-tab" type="button" onclick="navigateToClassroom()">Classroom</button>

                </li>
                <li class="nav-item ms-auto">
                    <button class="nav-link" id="create-profile-tab" type="button">Profile</button>
                    <div class="dropdown-content">
                        <ul>
                            <li><a href="#" data-bs-toggle="modal" data-bs-target="#studentModal">&nbsp;&nbsp;For Student</a></li>
                            <li><a href="#" data-bs-toggle="modal" data-bs-target="#teacherModal">&nbsp;&nbsp;For Teacher</a></li>
                            <li>
                                <a href="#" data-bs-toggle="modal" data-bs-target="#formModal">&nbsp;&nbsp;For Recruiter</a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="login-tab" type="button" data-bs-toggle="modal" data-bs-target="#loginModal">Login</button>
                </li>
            </ul>
        </div>
    </div>



    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Login</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/Home/Login" id="loginForm">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" id="email" name="Email" class="form-control" placeholder="example@domain.com" required aria-label="Email Address">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" id="password" name="Password" class="form-control" placeholder="Enter your password" required aria-label="Password">
                                <button type="button" class="btn btn-outline-secondary" id="togglePassword" aria-label="Toggle Password Visibility">
                                    <i class="bi bi-eye-slash"></i> <!-- Eye icon from Bootstrap Icons -->
                                </button>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="role" class="form-label">Select Role</label>
                            <select id="role" name="Role" class="form-select" required aria-label="Select Role">
                                <option value="" selected disabled>Choose Role</option>
                                <option value="Admin">Admin</option>
                                <option value="Teacher">Teacher</option>
                                <option value="Student">Student</option>
                            </select>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Login</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>



    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Login</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/Home/Login" id="loginForm">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" id="email" name="Email" class="form-control" placeholder="example@domain.com" required aria-label="Email Address">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" id="password" name="Password" class="form-control" placeholder="Enter your password" required aria-label="Password">
                                <button type="button" class="btn btn-outline-secondary" id="togglePassword" aria-label="Toggle Password Visibility">Show</button>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="role" class="form-label">Select Role</label>
                            <select id="role" name="Role" class="form-select" required aria-label="Select Role">
                                <option value="" selected disabled>Choose Role</option>
                                <option value="Admin">Admin</option>
                                <option value="Teacher">Teacher</option>
                                <option value="Student">Student</option>
                            </select>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Login</button>
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>




    <!-- Recruiter Modal -->
    <div class="modal fade " id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header justify-content-center">
                    <h5 class="modal-title text-center" id="formModalLabel">Welcome Onboard!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">
                    <form>
                        <!-- Name -->
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="John Doe" required>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="example@mail.com" required>
                        </div>

                        <!-- Username -->
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" placeholder="johndoe123" required>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="********" required>
                        </div>

                        <!-- Organization -->
                        <div class="mb-3">
                            <label for="organization" class="form-label">Organization Name</label>
                            <input type="text" class="form-control" id="organization" placeholder="ABC Corporation" required>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-submit" data-bs-toggle="modal" data-bs-target="#otpModal">Verify OTP</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Teacher Modal -->
    <div class="modal fade" id="teacherModal" tabindex="-1" aria-labelledby="studentModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-student-content modal-content">
                <!-- Modal Header -->
                <div class="modal-student-header modal-header justify-content-center">
                    <h5 class="modal-student-title modal-title" id="studentModalLabel">Teacher Form</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Modal Body -->
                <div class="modal-student-body modal-body">
                    <form>
                        <!-- Username -->
                        <div class="mb-3">
                            <label for="firstName" class="form-label">Full Name</label>
                            <input type="text" id="firstName" class="student-form-control form-control" placeholder="John Doe" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email ID</label>
                            <input type="email" id="email" class="student-form-control form-control" placeholder="john.doe@example.com" required>
                        </div>
                        <div class="mb-3">
                            <label for="mobile" class="form-label">Institude Name</label>
                            <input type="tel" id="text" class="student-form-control form-control" placeholder="IT Prenuer" required>
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label">UserName</label>
                            <input type="text" id="username" class="student-form-control form-control" placeholder="JohnDoe123" required>
                        </div>
                        <!-- Password -->
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" class="student-form-control form-control" placeholder="Enter password" required>
                        </div>


                        <div class="d-grid">
                            <button type="submit" class="btn btn-submit" data-bs-toggle="modal" data-bs-target="#otpModal">Verify OTP</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- JavaScript for Show Password & Validation -->
    <script>
        // Show Password Toggle
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordField = document.getElementById('password');
            const type = passwordField.type === 'password' ? 'text' : 'password';
            passwordField.type = type;
            this.textContent = type === 'password' ? 'Show' : 'Hide';
        });

        // Form Validation
        document.getElementById('loginForm').addEventListener('submit', function (e) {
            if (!this.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
                alert("Please fill out all fields correctly.");
            }
        });
    </script>






    @RenderBody()

    <div class="footer">
        <p>&copy; 2024 Team Examino. All rights reserved.</p>
        <p>Follow us on <a href="#" style="color: #00d1b2;">Facebook</a>, <a href="#" style="color: #00d1b2;">Twitter</a>, and <a href="#" style="color: #00d1b2;">Instagram</a>.</p>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>