@model OES.Models.ExamAndQuestion
@{
    ViewBag.Title = "EditExamExams";
    Layout = "~/Views/Shared/_TeacherNavbarPage1.cshtml";
}

<h2>EditExamExams</h2>
<form method="post" action="@Url.Action("EditExamExams2", "Teacher")">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <input type="hidden" name="ExamId" value="@Model.createExamInfo.ExamId" />
    </div>
    <div class="mb-3">
        <label for="ExamName" class="form-label">Exam Name</label>
        <input type="text" class="form-control" id="ExamName" name="ExamName" value="@Model.createExamInfo.ExamName" required />
    </div>

    <div class="mb-3">
        <label for="ExamSubName" class="form-label">Subject Name</label>
        <input type="text" class="form-control" id="ExamSubName" name="ExamSubName" value="@Model.createExamInfo.ExamSubName" required />
    </div>

    <div class="mb-3">
        <label for="ExamDate" class="form-label">Exam Date</label>
        <input type="text" class="form-control" id="ExamDate" name="ExamDate" placeholder="Day/Month/Year" value="@Model.createExamInfo.ExamDate" required />
    </div>

    <div class="mb-3">
        <label for="ExamMarks" class="form-label">Exam Marks</label>
        <input type="number" class="form-control" id="ExamMarks" name="ExamMarks" value="@Model.createExamInfo.ExamMarks" required />
    </div>

    <div class="mb-3">
        <label for="ExamDuration" class="form-label">Duration (in minutes)</label>
        <input type="number" class="form-control" id="ExamDuration" name="ExamDuration" value="@Model.createExamInfo.ExamDuration" required />
    </div>

    <div class="mb-3">
        <input type="hidden" name="BatchId" value="@Model.createExamInfo.BatchId" />
    </div>

    <div class="footer">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
<div>
    <a href="@Url.Action("GoToExams", "Teacher", new { batchid = Model.createExamInfo.BatchId })" class="btn btn-danger ps-4 pe-4 mt-5">
        Exit
    </a>
</div>
<section class="container my-5">
    <h2 class="text-center mb-4">Existing Questions</h2>

    @if (Model.Questions != null && Model.Questions.Any())
    {
        foreach (var Question in Model.Questions)
        {
            <div class="row border p-3 mb-3">
                <div class="col-md-2 text-center">
                    <strong>QNo:</strong> @Question.QuestionNo
                </div>
                <div class="col-md-8">
                    <strong>Question:</strong> @Question.Question
                </div>
                <div class="col-md-2 text-center">
                    <a href="@Url.Action("EditQuestionFromExams", "Teacher", new { questionId = Question.QuestionId })" class="btn btn-warning btn-sm">
                        Edit Question
                    </a>
                </div>
                <div class="col-12 mt-3">
                    <div class="row">
                        <div class="col-md-2">
                            <strong>OP1:</strong> @Question.Option1
                        </div>
                        <div class="col-md-2">
                            <strong>OP2:</strong> @Question.Option2
                        </div>
                        <div class="col-md-2">
                            <strong>OP3:</strong> @Question.Option3
                        </div>
                        <div class="col-md-2">
                            <strong>OP4:</strong> @Question.Option4
                        </div>
                        <div class="col-md-4">
                            <strong>Correct Answer:</strong> @Question.CorrectOption
                        </div>
                    </div>
                </div>
            </div>
        }
        <div>
            <a href="@Url.Action("GoToExams", "Teacher", new { batchid = Model.createExamInfo.BatchId })" class="btn btn-danger ps-4 pe-4 mt-5">
                Exit
            </a>
        </div>
    }
    else
    {
        <p class="text-center">No questions added yet.</p>
    }
</section>